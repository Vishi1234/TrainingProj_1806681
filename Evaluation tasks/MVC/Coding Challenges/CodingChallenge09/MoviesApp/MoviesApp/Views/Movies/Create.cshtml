@model MoviesApp.Models.Movies

<h2 style="font-family: Arial; color: #2c3e50;">Add Movie</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="margin-bottom: 15px;">
        <label style="display: block; font-weight: bold;">@Html.LabelFor(m => m.Moviename)</label>
        @Html.TextBoxFor(m => m.Moviename, new { @class = "form-control", placeholder = "Enter movie name" })
        <span style="color: red;">@Html.ValidationMessageFor(m => m.Moviename)</span>
    </div>

    <div style="margin-bottom: 15px;">
        <label style="display: block; font-weight: bold;">@Html.LabelFor(m => m.DirectorName)</label>
        @Html.TextBoxFor(m => m.DirectorName, new { @class = "form-control", placeholder = "Director's name" })
    </div>

    <div style="margin-bottom: 15px;">
        <label style="display: block; font-weight: bold;">@Html.LabelFor(m => m.DateofRelease)</label>
        @Html.TextBoxFor(m => m.DateofRelease, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
    </div>

    <button type="submit" style="background-color: #3498db; color: white; padding: 10px 20px; border: none; border-radius: 4px;">
        Create
    </button>
}
