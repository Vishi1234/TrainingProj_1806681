@model MoviesApp.Models.Movies

<h2 style="font-family: Arial; color: #c0392b;"> Delete Movie</h2>

<p style="font-size: 16px;">Are you sure you want to delete this movie?</p>

<div style="padding: 15px; border: 1px solid #ddd; border-radius: 5px; max-width: 400px;">
    <ul style="list-style-type: none; padding-left: 0;">
        <li><strong>Title:</strong> @Model.Moviename</li>
        <li><strong>Director:</strong> @Model.DirectorName</li>
        <li><strong>Release Date:</strong> @Model.DateofRelease.ToShortDateString()</li>
    </ul>
</div>

<br />

@using (Html.BeginForm("Delete", "MovieS", new { id = Model.Mid }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" style=" color: white; padding: 10px 20px; border: none; border-radius: 4px;">
        Confirm Delete
    </button>
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary", style = "margin-left: 10px;" })
}


